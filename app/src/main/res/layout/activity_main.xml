<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/Red_Seek_Bar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp" />

    <SeekBar
        android:id="@+id/Green_Seek_Bar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/Red_Seek_Bar"
        android:layout_marginTop="10dp" />

    <SeekBar
        android:id="@+id/Blue_Seek_Bar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/Green_Seek_Bar"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/Red_TextView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="30dp"
        android:layout_below="@+id/Blue_Seek_Bar"
        android:layout_marginTop="20dp"
        android:text="Red:" />

    <TextView
        android:id="@+id/Green_TextView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="30dp"
        android:layout_below="@+id/Red_TextView"
        android:layout_marginTop="20dp"
        android:text="Green:" />

    <TextView
        android:id="@+id/Blue_TextView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="30dp"
        android:layout_below="@+id/Green_TextView"
        android:layout_marginTop="20dp"
        android:text="Red:" />

    <TextView
        android:id="@+id/Szin_Mutat_Text_View"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="40dp"
        />

</RelativeLayout>